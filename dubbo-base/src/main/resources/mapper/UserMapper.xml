<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.park.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.park.model.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="password" property="password"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="dept_id" property="deptId"/>
        <result column="status" property="status"/>
        <result column="address" property="address"/>
        <result column="avatar" property="avatar"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="getRolesByUsername" resultType="String">
        select
            r.name
        from
            tb_user u
        inner join tb_user_role ur on u.id = ur.user_id
        inner join tb_role r on ur.role_id = r.id
        where
          u.username = #{username}
    </select>

    <select id="getMenusByUsername" resultType="String">
        select
            m.url
        from
            tb_user u
        inner join tb_user_role ur on u.id = ur.user_id
        inner join tb_role_menu rm on ur.role_id = rm.role_id
        inner join tb_menu m on rm.menu_id = m.id
        where
          u.username = #{username}
    </select>

</mapper>
